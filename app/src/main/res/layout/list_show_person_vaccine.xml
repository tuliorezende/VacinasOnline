<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/vaccineIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:padding="10dp"
        android:src="@drawable/ic_menu_camera" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:orientation="vertical">

        <TextView
            android:id="@+id/vaccineName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginStart="56dp"
            android:gravity="center_vertical"
            android:paddingTop="10dp"
            android:layout_toRightOf="@id/vaccineIcon"
            android:layout_toStartOf="@+id/vaccinePortion"
            android:text="Line 1" />

        <TextView
            android:id="@+id/acronym"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginStart="56dp"
            android:paddingTop="10dp"
            android:layout_toRightOf="@id/vaccineIcon"
            android:layout_toStartOf="@+id/vaccinePortion"
            android:text="VIP" />


    </LinearLayout>

    <TextView
        android:id="@+id/vaccinePortion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@id/vaccineEditItem"
        android:text="Line 2" />

    <ImageButton
        android:id="@+id/vaccineEditItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:background="?selectableItemBackground"
        android:padding="16dp"
        android:src="@drawable/ic_check" />

</RelativeLayout>